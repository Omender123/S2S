<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_background_image"
        android:orientation="vertical"
        tools:context=".ui.Authentication.EnterOTP">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="Enter OTP"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:background="@drawable/ic_two_corner_back">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="15dp"
                android:paddingTop="30dp"
                android:paddingEnd="15dp"
                android:paddingBottom="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center"
                    android:layout_marginTop="20sp"
                    android:text="Enter OTP "
                    android:textColor="@color/txt_color"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:text="Lorem ipsum dolor sit amet"
                    android:textColor="#992B2B2B"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <com.chaos.view.PinView
                    android:id="@+id/enterOtp"
                    style="@style/PinWidget.PinView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="35dp"
                    android:cursorVisible="true"
                    android:inputType="numberPassword"
                    android:textColor="@color/hnt_color"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:cursorWidth="2dp"
                    app:hideLineWhenFilled="false"
                    app:itemCount="4"
                    app:itemHeight="50dp"
                    app:itemRadius="6dp"
                    app:itemSpacing="30dp"
                    app:itemWidth="50dp"
                    app:lineColor="#80303030"
                    app:lineWidth="2dp"
                    app:viewType="rectangle" />




                <TextView
                    android:id="@+id/btn_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="120dp"
                    android:background="@drawable/btn_gradint_color"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:text="Confirm"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/txt_resend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginTop="20sp"
                    android:textColor="#2d31fa"
                    android:text="Resend OTP"/>


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


    </LinearLayout>

</layout>