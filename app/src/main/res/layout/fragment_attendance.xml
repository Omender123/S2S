<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".ui.Attendance.AttendanceFragment">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:cardBackgroundColor="#142D31FA"
            app:cardCornerRadius="10dp"
            app:cardElevation="1dp"
            app:strokeColor="#78b2b2b2"
            app:strokeWidth="0.5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="15dp"
                android:paddingTop="20dp"
                android:paddingEnd="15dp"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="15dp"
                    android:layout_toStartOf="@+id/radio_group"
                    android:fontFamily="@font/poppins_medium"
                    android:letterSpacing="0.02"
                    android:lineSpacingExtra="8sp"
                    android:text="Today"
                    android:textColor="#06090e"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="15dp"
                    android:layout_toStartOf="@+id/radio_group"
                    android:fontFamily="@font/poppins_medium"
                    android:letterSpacing="0.02"
                    android:lineSpacingExtra="10sp"
                    android:text="08-02-2022"
                    android:textColor="#822b2b2b"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <RadioGroup
                    android:id="@+id/radio_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="06dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_A"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/radio_selector"
                        android:button="@android:color/transparent"
                        android:elevation="2dp"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:text="A"
                        android:textColor="@drawable/radio_textcolor"
                        android:textSize="12dp"
                        android:textStyle="normal" />

                    <RadioButton
                        android:id="@+id/radio_P"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/radio_selector"
                        android:button="@android:color/transparent"
                        android:elevation="2dp"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:text="P"
                        android:textColor="@drawable/radio_textcolor"
                        android:textSize="12dp"
                        android:textStyle="normal" />

                    <RadioButton
                        android:id="@+id/radio_L"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/radio_selector"
                        android:button="@android:color/transparent"
                        android:elevation="2dp"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:text="L"
                        android:clickable="false"
                        android:textColor="@drawable/radio_textcolor"
                        android:textSize="12dp"
                        android:textStyle="normal" />

                </RadioGroup>

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>


        <TextView
            android:id="@+id/text_aHis"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/btn_border1"
            android:text="Attendance History"
            android:textStyle="normal"
            android:textSize="15sp"
            android:textColor="#06090e"
            android:fontFamily="@font/poppins_medium"
            android:paddingStart="15sp"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/ic_circle_forword"
            android:paddingEnd="15dp"
            android:layout_marginStart="15dp"/>

        <TextView
            android:id="@+id/text_mLeave"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_border1"
            android:text="My Leave"
            android:textStyle="normal"
            android:textSize="15sp"
            android:textColor="#06090e"
            android:fontFamily="@font/poppins_medium"
            android:paddingStart="15sp"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/ic_circle_forword"
            android:paddingEnd="15dp"
            android:layout_marginStart="15dp"/>

    </LinearLayout>


</layout>