<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background_image"
    android:orientation="vertical"
    tools:context=".ui.Authentication.ChangePassword">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:text="Change Password"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:background="@drawable/ic_two_corner_back">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="15dp"
            android:paddingTop="30dp"
            android:paddingEnd="15dp"
            android:paddingBottom="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:layout_marginTop="20sp"
                android:text="Enter New Password"
                android:textColor="@color/txt_color"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="Lorem ipsum dolor sit amet"
                android:textColor="#992B2B2B"
                android:textSize="15sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/ed_pass"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/btn_border"
                android:drawableLeft="@drawable/ic_lock"
                android:drawablePadding="15dp"
                android:fontFamily="@font/poppins_medium"
                android:hint="New Password"
                android:inputType="textPassword"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:singleLine="true"
                android:textColor="@color/hnt_color"
                android:textColorHint="@color/hnt_color"
                android:textSize="15dp"
                android:textStyle="normal" />


            <EditText
                android:id="@+id/ed_Cpass"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_border"
                android:drawableLeft="@drawable/ic_lock"
                android:drawablePadding="15dp"
                android:fontFamily="@font/poppins_medium"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:singleLine="true"
                android:textColor="@color/hnt_color"
                android:textColorHint="@color/hnt_color"
                android:textSize="15dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/btn_change"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="120dp"
                android:background="@drawable/btn_gradint_color"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text="Change"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="normal" />



        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>

</layout>